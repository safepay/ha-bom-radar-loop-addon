{
  "name": "Australian BoM Radar Loop",
  "version": "1.0.6",
  "slug": "bom-radar-loop",
  "description": "Creates animated radar loops and individual images from Australian Bureau of Meteorology radar data for use in dashboards and LLM Vision analysis",
  "arch": ["aarch64", "amd64", "armhf", "armv7", "i386"],
  "startup": "application",
  "boot": "auto",
  "init": false,
  "map": ["config:rw"],
  "options": {
    "radar_product_id": "IDR022",
    "timezone": "Australia/Melbourne",
    "update_interval": 600,
    "output_path": "www/bom_radar",
    "layers": [
      "background",
      "locations"
    ],
    "gif_duration": 500,
    "gif_last_frame_duration": 1000,
    "Show home marker?": false,
    "Home latitude": -37.8136,
    "Home longitude": 144.9631,
    "Enable second radar?": false,
    "Second radar ID": "IDR022",
    "Enable third radar?": false,
    "Third radar ID": "IDR023"
  },
  "schema": {
    "radar_product_id": "str",
    "timezone": "str",
    "update_interval": "int(60,3600)",
    "output_path": "str",
    "layers": ["str"],
    "gif_duration": "int(100,2000)",
    "gif_last_frame_duration": "int(100,5000)",
    "Show home marker?": "bool",
    "Home latitude": "float",
    "Home longitude": "float",
    "Enable second radar?": "bool",
    "Second radar ID": "str",
    "Enable third radar?": "bool",
    "Third radar ID": "str"
  },
  "url": "https://github.com/safepay/ha-bom-radar-loop-addon"
}
