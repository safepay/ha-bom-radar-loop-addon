{
  "name": "Australian BoM Radar Loop",
  "version": "1.0.4",
  "slug": "bom-radar-loop",
  "description": "Creates animated radar loops and individual images from Australian Bureau of Meteorology radar data for use in dashboards and LLM Vision analysis",
  "arch": ["aarch64", "amd64", "armhf", "armv7", "i386"],
  "startup": "application",
  "boot": "auto",
  "init": false,
  "map": ["config:rw"],
  "options": {
    "radar_product_id": "IDR022",
    "timezone": "Australia/Melbourne",
    "update_interval": 600,
    "output_path": "www/bom_radar",
    "layer_background": true,
    "layer_catchments": false,
    "layer_topography": false,
    "layer_locations": true,
    "gif_duration": 500,
    "gif_last_frame_duration": 1000,
    "show_home_marker": false,
    "home_latitude": -37.8136,
    "home_longitude": 144.9631,
    "enable_second_radar": false,
    "second_radar_id": "IDR022",
    "enable_third_radar": false,
    "third_radar_id": "IDR023"
  },
  "schema": {
    "radar_product_id": "str",
    "timezone": "str",
    "update_interval": "int(60,3600)",
    "output_path": "str",
    "layer_background": "bool",
    "layer_catchments": "bool",
    "layer_topography": "bool",
    "layer_locations": "bool",
    "gif_duration": "int(100,2000)",
    "gif_last_frame_duration": "int(100,5000)",
    "show_home_marker": "bool",
    "home_latitude": "float",
    "home_longitude": "float",
    "enable_second_radar": "bool",
    "second_radar_id": "str",
    "enable_third_radar": "bool",
    "third_radar_id": "str"
  },
  "url": "https://github.com/safepay/ha-bom-radar-loop-addon"
}
