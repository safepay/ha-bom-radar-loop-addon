{
  "name": "Australian BoM Radar Loop",
  "version": "1.0.0",
  "slug": "bom-radar-loop",
  "description": "Creates animated radar loops and individual images from Australian Bureau of Meteorology radar data for use in dashboards and LLM Vision analysis",
  "arch": ["aarch64", "amd64", "armhf", "armv7", "i386"],
  "startup": "application",
  "boot": "auto",
  "init": false,
  "map": ["config:rw"],
  "options": {
    "radar_product_id": "IDR022",
    "timezone": "Australia/Melbourne",
    "update_interval": 600,
    "output_path": "www/bom_radar",
    "layers": [
      "background",
      "locations"
    ],
    "gif_duration": 500,
    "gif_last_frame_duration": 1000,
    "residential_location_enabled": false,
    "residential_latitude": -37.8136,
    "residential_longitude": 144.9631,
    "second_radar_enabled": false,
    "second_radar_product_id": "IDR022",
    "third_radar_enabled": false,
    "third_radar_product_id": "IDR023"
  },
  "schema": {
    "radar_product_id": "str",
    "timezone": "str",
    "update_interval": "int(60,3600)",
    "output_path": "str",
    "layers": [
      "list(background|catchments|topography|locations)"
    ],
    "gif_duration": "int(100,2000)",
    "gif_last_frame_duration": "int(100,5000)",
    "residential_location_enabled": "bool",
    "residential_latitude": "float",
    "residential_longitude": "float",
    "second_radar_enabled": "bool",
    "second_radar_product_id": "str",
    "third_radar_enabled": "bool",
    "third_radar_product_id": "str"
  },
  "image": "ghcr.io/safepay/ha-bom-radar-loop-addon/{arch}",
  "url": "https://github.com/safepay/ha-bom-radar-loop-addon",
  "homeassistant_api": false,
  "hassio_api": false,
  "host_network": false
}
